# Demo Environment Configuration for Hugging Face Spaces
# Kenya Health AI System - Demo Mode

# Application Configuration
APP_NAME=ushauri-ai-demo
APP_VERSION=1.0.0
APP_ENV=demo
DEBUG=false
LOG_LEVEL=INFO

# Demo Mode Settings
DEMO_MODE=true
USE_SAMPLE_DATA=true

# AI Configuration - Groq API (Primary)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Hugging Face Configuration (Backup)
HF_API_KEY=your_hf_api_key_here
HF_MODEL=microsoft/DialoGPT-medium

# Database Configuration (Demo Mode)
DB_TYPE=demo
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demo_kenya_health
DB_USER=demo_user
DB_PASSWORD=demo_password

# Streamlit Configuration
STREAMLIT_PORT=7860
STREAMLIT_HOST=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Demo Data Configuration
DEMO_COUNTIES=Kisumu,Busia,Vihiga
DEMO_CHW_COUNT=125
DEMO_DATA_START_DATE=2024-12-01
DEMO_DATA_END_DATE=2025-06-30

# Feature Flags for Demo
FEATURE_REAL_DATABASE=false
FEATURE_LIVE_DATA=false
FEATURE_DEMO_MODE=true
FEATURE_SAMPLE_QUERIES=true
FEATURE_AI_CHAT=true
FEATURE_REPORTS=true

# Security (Demo Mode)
ENABLE_AUTH=false
DEMO_USER=demo@kenya-health.go.ke
DEMO_PASSWORD=demo123

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=300
MAX_QUERY_RESULTS=1000

# Logging
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
LOG_FORMAT=simple
